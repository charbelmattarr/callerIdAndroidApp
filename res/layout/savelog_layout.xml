<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    android:background="@null"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="50dp"
        app:cardBackgroundColor="@color/white"
         android:id="@+id/logscardView"
        >

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/bottomsheetWannabe"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:behavior_peekHeight="40dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right"
                 android:gravity="right"
                >

                <TextView
                    android:id="@+id/contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"

                    />
                <Button
                    android:id="@+id/buttonClose2"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:backgroundTint="@color/red"
                    android:gravity="right"
                    android:text="x" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"

                    >


                    <TextView
                        android:id="@+id/duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="25:12"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/common_google_signin_btn_text_light_pressed" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_clock"/>
                </LinearLayout>
            </LinearLayout>




            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/description"
                android:hint="enter the description of the call"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="@color/javistaOrange"
                android:padding="2dp"/>



            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="save phone call"
                android:backgroundTint="@color/javistaOrange"
                android:id="@+id/savephonecall"
                android:layout_gravity="center"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_below="@+id/logscardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/green"
        android:id="@+id/logsStatus"/>
</RelativeLayout>